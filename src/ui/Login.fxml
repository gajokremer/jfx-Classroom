<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="167.0" layoutY="52.0" text="Sign in to Classroom" textFill="#0000df">
         <font>
            <Font name="Times New Roman Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="117.0" layoutY="138.0" text="Username: " textFill="#0000fd">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" layoutX="251.0" layoutY="135.0">
         <font>
            <Font size="18.0" />
         </font></TextField>
      <Label layoutX="128.0" layoutY="206.0" text="Password:" textFill="#0000fd">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
      <PasswordField fx:id="txtPassword" layoutX="251.0" layoutY="200.0">
         <font>
            <Font size="18.0" />
         </font></PasswordField>
      <Button layoutX="325.0" layoutY="285.0" mnemonicParsing="false" onAction="#logIn" style="-fx-background-color: blue;" text="Log in" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="182.0" layoutY="285.0" mnemonicParsing="false" onAction="#signUp" style="-fx-background-color: blue;" text="Sign up" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</Pane>
